export const Highlight = ({ children, color, to }) => {
  return (
    <Link to={to} style={{
      backgroundColor: color,
      borderRadius: '15px', // Iets minder ronde hoeken
      color: '#fff',
      padding: '5px 10px', // Kleinere padding
      fontSize: '0.9rem', // Kleinere tekst
      cursor: 'pointer',
      display: 'inline-block',
      textAlign: 'center',
      fontWeight: 'bold',
      textDecoration: 'none',
    }}>
      {children}
    </Link>
  );
};


